<Window x:Class="CameraRemoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CameraRemoteApp"
        mc:Ignorable="d"
        Title="CameraRemoteApp" Height="550" Width="500">
    <UserControl>
        <TabControl Name="Tab">
            <TabItem Header="General">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Application State :" FontWeight="Bold" Margin="0,5,0,0"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="{Binding Path=State}" FontWeight="Bold" Margin="0,5,0,0"/>
                    <GroupBox Header="General Configuration" Name="GeneralConfigurationGroupBox" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2"  Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Network :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" Name="GeneralNetworkActivationCheckbox" IsChecked="{Binding Path=IsRemoteServer}" Click="CkbActivateNetwork" Margin="0,10,0,0"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Streaming :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" Name="GeneralNetworkStreamingCheckBox" IsChecked="{Binding Path=IsStreaming}" Click="CkbActivateStreaming" Margin="0,10,0,0"/>
                           
                            <Label Grid.Row="3" Grid.Column="0" Content="Local Recording :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="3" Grid.Column="1" Name="GeneralLocalRecordingCheckbox" IsChecked="{Binding Path=IsLocalRecording}" Click="CkbActivateLocalRecording" Margin="0,10,0,10"/>
                            <Button Content="Load Configuration" Grid.Row="4" Grid.ColumnSpan="2" Click="BtnLoadConfiguration" Name="BtnLoadConfig" Margin="0,5,0,5"/>
                            <Button Content="Save Configuration" Grid.ColumnSpan="2" Grid.Row="5" Click="BtnSaveConfiguration" Name="BtnSaveConfig" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>
          
                    <GroupBox Header="Actions" Name="GeneralActionsGroupBox" FontWeight="Bold" Grid.Row="3" Grid.ColumnSpan="2"  Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Button Content="Start" Grid.Row="0" Name="BtnStart" Click="BtnStartAll" Margin="0,5,0,5"/>
                            <Button Content="Start Network Only" Name="BtnStartNet" Grid.Row="1" Click="BtnStartRendezVous" Margin="0,5,0,5"/>
                            <Button Content="Quit" Grid.Row="2" Name="BtnQuit" Click="BtnQuitClick" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Video Sources">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Video Source :" FontWeight="Bold" FontSize="14"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding VideoSourceList}" Name="VideoSourceComboBox" SelectionChanged="VideoSourceSelected"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Sensor type :" FontWeight="Bold" FontSize="14"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SensorTypeList}" SelectionChanged="SensorTypeSelected" Name="SensorTypeComboBox"/>
                    <GroupBox Header="Azure Kinect Configuration" Name="AzureKinectConfiguration" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="2" >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>          
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Name="AzureKinectAudio" Content="Audio" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputAudio}"/>
                            <CheckBox Grid.Row="1" Grid.Column="0" Name="AzureKinectSkeleton" Content="Skeleton" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputBodies}"/>
                            <CheckBox Grid.Row="2" Grid.Column="0" Name="AzureKinectRGB" Content="RGB" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputColor}"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" Name="AzureKinectColoRes" ItemsSource="{Binding ResolutionsList}" SelectedItem="{Binding KinectAzureRemoteStreamsConfigurationUI.ColorResolution}"/>
                            <CheckBox Grid.Row="3" Grid.Column="0" Name="AzureKinectInfrared" Content="Infrared" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputInfrared}"/>
                            <CheckBox Grid.Row="4" Grid.Column="0" Name="AzureKinectDepth" Content="Depth" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputDepth}"/>
                            <CheckBox Grid.Row="5" Grid.Column="0" Name="AzureKinectDepthCalibration" Content="DepthCalibration" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputCalibration}"/>
                            <CheckBox Grid.Row="6" Grid.Column="0" Name="AzureKinectIMU" Content="IMU" IsChecked="{Binding KinectAzureRemoteStreamsConfigurationUI.OutputImu}"/>
                            <ComboBox Grid.Row="7" Grid.Column="0" Name="AzureKinectFPS" ItemsSource="{Binding FPSList}" SelectedItem="{Binding KinectAzureRemoteStreamsConfigurationUI.CameraFPS}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Nuitrack Configuration" Name="NuitrackConfiguration" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="2" >
                            <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Device Serial Number"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="NuitrackDeviceSerialNumber" Text="{Binding NuitrackRemoteStreamsConfigurationUI.DeviceSerialNumber}"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Activation Key"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="NuitrackActivationKey" Text="{Binding NuitrackRemoteStreamsConfigurationUI.ActivationKey}"/>
                            <CheckBox Grid.Row="2" Grid.Column="0" Name="NuitrackSkeleton" Content="Skeleton" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputSkeletonTracking}"/>
                            <CheckBox Grid.Row="3" Grid.Column="0" Name="NuitrackRGB" Content="RGB" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputColor}"/>
                            <CheckBox Grid.Row="4" Grid.Column="0" Name="NuitrackDepth" Content="Depth" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputDepth}"/>
                            <CheckBox Grid.Row="4" Grid.Column="0" Name="NuitrackHand" Content="Hand" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputHandTracking}"/>
                            <CheckBox Grid.Row="5" Grid.Column="0" Name="NuitrackUser" Content="User" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputUserTracking}"/>
                            <CheckBox Grid.Row="6" Grid.Column="0" Name="NuitrackGesture" Content="Gesture" IsChecked="{Binding NuitrackRemoteStreamsConfigurationUI.OutputGestureRecognizer}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Kinect Configuration" Name="KinectConfiguration" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="2" >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column="0" Name="KinectAudio" Content="Audio" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputAudio}"/>
                            <CheckBox Grid.Row="1" Grid.Column="0" Name="KinectSkeleton" Content="Skeleton" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputBodies}"/>
                            <CheckBox Grid.Row="2" Grid.Column="0" Name="KinectRGB" Content="RGB" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputColor}"/>
                            <CheckBox Grid.Row="3" Grid.Column="0" Name="KinectRGBD" Content="RGB + Depth" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputRGBD}"/>
                            <CheckBox Grid.Row="4" Grid.Column="0" Name="KinectDepth" Content="Depth" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputDepth}"/>
                            <CheckBox Grid.Row="5" Grid.Column="0" Name="KinectDepthCalibration" Content="Depth Calibration" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputCalibration}"/>
                            <CheckBox Grid.Row="6" Grid.Column="0" Name="KinectInfrared" Content="Infrared" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputInfrared}"/>
                            <CheckBox Grid.Row="7" Grid.Column="0" Name="KinectLongExposureInfrared" Content="Long Exposure Infrared" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputLongExposureInfrared}"/>
                            <CheckBox Grid.Row="8" Grid.Column="0" Name="KinectColorToCameraMapping" Content="Color To Camera Mapping" IsChecked="{Binding KinectRemoteStreamsConfigurationUI.OutputColorToCameraMapping}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Camera Configuration" Name="CameraConfiguration" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="2" >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Capture Format :"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding CameraCaptureFormat}" Name="CameraCaptureFormatComboBox"/>
                        </Grid>
                    </GroupBox>
                    <Label Grid.Row="4" Grid.Column="0" Content="Image Encoding Level"/>
                    <TextBox Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="{Binding EncodingLevel}" Name="EncodingLevelTextBox"/>
                </Grid>
                
            </TabItem>
            <TabItem Header="Network" Name="NetworkHeader">
                <Grid Background="#FFE5E5E5" Name="NetworkGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Content="Activate" Name="NetworkActivationCheckbox" IsChecked="{Binding IsRemoteServer}" Click="CkbActivateNetwork" Margin="0,10,0,0"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Psi Server configuration" FontWeight="Bold" FontSize="14" Margin="0,20,0,0"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Server IP :" FontWeight="Bold"/>
                    <TextBox Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding RendezVousServerIp}" Name="RendezVousServerIpTextBox"/>
                    <Label Grid.Row="3" Grid.Column="0" Content="Server Port :" FontWeight="Bold"/>
                    <TextBox Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="{Binding PipelineConfigurationUI.RendezVousPort}" Name="RendezVousPortTextBox"/>
                    <Label Grid.Row="4" Grid.Column="0" Content="Command Port :" FontWeight="Bold"/>
                    <TextBox Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="{Binding CommandPort}" Name="CommandPortTextBox"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="Application configuration" FontWeight="Bold" FontSize="14" Margin="0,20,0,0"/>
                    <CheckBox Grid.Row="5" Grid.Column="1" Content="Activate Streaming" Name="NetworkStreamingCheckBox" IsChecked="{Binding IsStreaming}" Click="CkbActivateStreaming" Margin="0,30,0,0"/>
                    <Label Grid.Row="6" Grid.Column="0" Content="IP To Use :" FontWeight="Bold"/>
                    <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding IPsList}" SelectedItem="{Binding IpSelectedUI}" Name="RendezVousHostComboBox"/>
                    <Label Grid.Row="8" Grid.Column="0" Content="Streaming Port Range Start:" FontWeight="Bold"/>
                    <TextBox Grid.Row="8" Grid.Column="1" TextWrapping="Wrap" Text="{Binding ExportPort}" Name="StreamingPortRangeStartTextBox"/>
                    <Label Grid.Row="7" Grid.Column="0" Content="Application Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" Text="{Binding RendezVousApplicationNameUI}" Name="ApplicationNameTextBox"/>

                    <Label Grid.Row="9" Grid.Column="0" Content="Other" FontWeight="Bold" FontSize="14"  Margin="0,20,0,0"/>
                    <Label Grid.Row="10" Grid.Column="0" Content="Command Application Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="10" Grid.Column="1" TextWrapping="Wrap" Text="{Binding CommandSource}" Name="CommandSourceTextBox"/>
                </Grid>
            </TabItem>
            <TabItem Header="Local Recording">
                <Grid Background="#FFE5E5E5" Name="LocalRecordingGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Content="Activate" Name="LocalRecordingCheckbox" IsChecked="{Binding IsLocalRecording}" Click="CkbActivateLocalRecording" Margin="0,10,0,10"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Session Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="{Binding LocalSessionName}" Name="LocalRecordingSessionNameTextBox"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Dataset Directory :" FontWeight="Bold"/>
                    <GroupBox Grid.Row="2" Grid.Column="1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"  TextWrapping="Wrap" Text="{Binding LocalDatasetPath}" Name="LocalRecordingDatasetDirectoryTextBox"/>
                            <Button Grid.Column="1" Content="Browse" Name="LocalRecordingDatasetDirectoryButton" Click="LocalRecordingDatasetDirectoryButtonClick"/>
                        </Grid>
                    </GroupBox>
                    <Label Grid.Row="3" Grid.Column="0" Content="Dataset Name :" FontWeight="Bold"/>
                    <GroupBox Grid.Row="3" Grid.Column="1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"  TextWrapping="Wrap" Text="{Binding LocalDatasetName}" Name="LocalRecordingDatasetNameTextBox"/>
                            <Button Grid.Column="1" Content="Browse" Name="LocalRecordingDatasetNameButton" Click="LocalRecordingDatasetNameButtonClick"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <ScrollViewer>
                    <TextBox x:Name="Logs"  TextWrapping="Wrap" IsReadOnlyCaretVisible="True" AutomationProperties.IsOffscreenBehavior="FromClip" Text="{Binding Log}" TextChanged="Log_TextChanged" ScrollViewer.VerticalScrollBarVisibility="Auto" ForceCursor="True"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </UserControl>
</Window>
