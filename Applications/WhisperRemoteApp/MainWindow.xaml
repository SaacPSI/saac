<Window x:Class="WhisperRemoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhisperRemoteApp"
        mc:Ignorable="d"
        Title="WhisperRemoteApp" Height="600" Width="500">
    <UserControl>
        <TabControl Name="Tab">
            <TabItem Header="General">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Application State :" FontWeight="Bold" Margin="0,5,0,0"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="{Binding Path=State}" FontWeight="Bold" Margin="0,5,0,0"/>
                    <GroupBox Header="General Configuration" Name="GeneralConfigurationGroupBox" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2"  Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Network :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="0" Grid.Column="1" Name="GeneralNetworkActivationCheckbox" IsChecked="{Binding Path=IsRemoteServer}" Click="CkbActivateNetwork" Margin="0,10,0,0"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Streaming :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="1" Grid.Column="1" Name="GeneralNetworkStreamingCheckBox" IsChecked="{Binding Path=IsStreaming}" Click="CkbActivateStreaming" Margin="0,10,0,0"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="Whisper :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="2"  Grid.Column="1" Name="GeneralWhisperActivationCheckbox" IsChecked="{Binding Path=IsWhisper}" Click="CkbActivateWhisper" Margin="0,10,0,0"/>
                            <Label Grid.Row="3" Grid.Column="0" Content="Local Recording :" FontWeight="Bold"/>
                            <CheckBox Grid.Row="3" Grid.Column="1" Name="GeneralLocalRecordingCheckbox" IsChecked="{Binding Path=IsLocalRecording}" Click="CkbActivateLocalRecording" Margin="0,10,0,10"/>
                            <Button Content="Load Configuration" Grid.Row="4" Grid.ColumnSpan="2" Click="BtnLoadConfiguration" Name="BtnLoadConfig" Margin="0,5,0,5"/>
                            <Button Content="Save Configuration" Grid.ColumnSpan="2" Grid.Row="5" Click="BtnSaveConfiguration" Name="BtnSaveConfig" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Transcription File" Name="TranscriptionFileGroupBox" FontWeight="Bold" Grid.Row="2" Grid.ColumnSpan="2"  Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="File Directory :" FontWeight="Bold"/>
                            <GroupBox Grid.Row="0" Grid.Column="1" Margin="-5,-5,-5,-5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" TextWrapping="Wrap" Name="TranscriptionPathTextBox"/>
                                    <Button Grid.Column="1" Content="Browse" Name="TranscriptionPathButton" Click="TranscriptionPathButtonClick"/>
                                </Grid>
                            </GroupBox>

                            <Label Grid.Row="1" Grid.Column="0" Content="Filename :" FontWeight="Bold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Name="TranscriptionFilenameTextBox"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Actions" Name="GeneralActionsGroupBox" FontWeight="Bold" Grid.Row="3" Grid.ColumnSpan="2"  Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Button Content="Start" Grid.Row="0" Name="BtnStart" Click="BtnStartAll" Margin="0,5,0,5"/>
                            <Button Content="Start Network Only" Name="BtnStartNet" Grid.Row="1" Click="BtnStartRendezVous" Margin="0,5,0,5"/>
                            <Button Content="Quit" Grid.Row="2" Name="BtnQuit" Click="BtnQuitClick" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Audio Sources">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Audio Source :" FontWeight="Bold" FontSize="14"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Path=AudioSourceList}" SelectionChanged="AudioSourceSelected" Name="AudioSourceComboBox" />
                    <GroupBox Header="Microphones" Name="MicrophonesGroupBox" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,20,0,0">
                        <Grid Name="MicrophonesGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Button Content="Resfresh list" FontWeight="Bold" FontSize="14" Grid.Row="0" Grid.Column="0" Width="auto" Click="BtnRefreshMicrophones" Name="ButtonRefreshMicrophones" Margin="0,10,0,20"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Microphone" FontWeight="Bold"/>
                            <Label Grid.Row="1" Grid.Column="1" Content="User id affectation" FontWeight="Bold"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Wave Files" Name="WavFilesGroupBox" FontWeight="Bold" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,0">
                        <Grid Name="WaveFilesGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Button Content="Add file" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Click="BtnAddWavFile" Name="ButtonAddWaveFile" Margin="0,0,0,0"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Dataset" Name="AudioSourceDatasetGroupBox" FontWeight="Bold" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,20,0,0">
                        <Grid Name="AudioSourceDatasetGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=AudioSourceDatasetPath}" Name="AudioSourceDatasetTextBox"/>
                            <Button Grid.Row="0" Grid.Column="1" Content="Browse" Name="AudioSourceDatasetPathButton" Click="AudioSourceDatasetButtonClick"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Session to load :" FontWeight="Bold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=AudioSourceSessionName}" Name="AudioSourceSessionNameTextBox"/>
                            <Button Content="Open Dataset" FontWeight="Bold" Grid.Row="2" Grid.Column="1" Width="auto" Click="BtnAudioSourceOpenDataset" Name="ButtonAudioSourceOpenDataset" Margin="0,0,0,0"/>
                            <GroupBox Header="Available Streams" Name="AudioSourceSreamsGroupBox" FontWeight="Bold" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                <Grid Name="AudioSourceDatasetStreamsGrid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Network" Name="NetworkHeader">
                <Grid Background="#FFE5E5E5" Name="NetworkGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Content="Activate" Name="NetworkActivationCheckbox" IsChecked="{Binding Path=IsRemoteServer}" Click="CkbActivateNetwork" Margin="0,10,0,0"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Psi Server configuration" FontWeight="Bold" FontSize="14" Margin="0,20,0,0"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Server IP :" FontWeight="Bold"/>
                    <TextBox Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=RendezVousServerIp}" Name="RendezVousServerIpTextBox"/>
                    <Label Grid.Row="3" Grid.Column="0" Content="Server Port :" FontWeight="Bold"/>
                    <TextBox Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=PipelineConfigurationUI.RendezVousPort}" Name="RendezVousPortTextBox"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Application configuration" FontWeight="Bold" FontSize="14" Margin="0,20,0,0"/>
                    <CheckBox Grid.Row="4" Grid.Column="1" Content="Activate Streaming" Name="NetworkStreamingCheckBox" IsChecked="{Binding Path=IsStreaming}" Click="CkbActivateStreaming" Margin="0,30,0,0"/>
                    <Label Grid.Row="5" Grid.Column="0" Content="IP To Use :" FontWeight="Bold"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Path=IPsList}" SelectionChanged="RendezVousHostSelected" Name="RendezVousHostComboBox"/>
                    <Label Grid.Row="6" Grid.Column="0" Content="Streaming Port Range Start:" FontWeight="Bold"/>
                    <TextBox Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=WhisperRemoteStreamsConfigurationUI.ExportPort}" Name="StreamingPortRangeStartTextBox"/>
                    <Label Grid.Row="7" Grid.Column="0" Content="Application Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=WhisperRemoteStreamsConfigurationUI.RendezVousApplicationName}" Name="ApplicationNameTextBox"/>

                    <Label Grid.Row="8" Grid.Column="0" Content="Other" FontWeight="Bold" FontSize="14"  Margin="0,20,0,0"/>
                    <Label Grid.Row="9" Grid.Column="0" Content="Command Application Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="9" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=CommandSource}" Name="CommandSourceTextBox"/>
                </Grid>
            </TabItem>
            <TabItem Header="Whisper">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Content="Activate" Name="WhisperActivationCheckbox" IsChecked="{Binding Path=IsWhisper}" Click="CkbActivateWhisper" Margin="0,10,0,0"/>
                    <GroupBox Header="Voice Activity Detection Configuration" Name="VADGroupBox" FontWeight="Bold" Grid.Row="1"  Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Buffer Length (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.BufferLengthInMs}" Name="VadBufferLengthTextBox"/>
                            <Label Grid.Row="1" Grid.Column="0" Content="Voice Activity Start Offset (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.VoiceActivityStartOffsetMs}" Name="VadVoiceActivityStartOffsetTextBox"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="Voice Activity End Offset (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.VoiceActivityEndOffsetMs}" Name="VadVoiceActivityEndOffsetTextBox"/>
                            <Label Grid.Row="3" Grid.Column="0" Content="Initial Silence Timeout (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.InitialSilenceTimeoutMs}" Name="VadInitialSilenceTimeoutTextBox"/>
                            <Label Grid.Row="4" Grid.Column="0" Content="Babble Timeout (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.BabbleTimeoutMs}" Name="VadBabbleTimeoutTextBox"/>
                            <Label Grid.Row="5" Grid.Column="0" Content="Initial Silence Timeout (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.EndSilenceTimeoutAmbiguousMs}" Name="VadEndSilenceTimeoutAmbiguousTextBox"/>
                            <Label Grid.Row="6" Grid.Column="0" Content="End Silence Timeout (ms):" FontWeight="Bold"/>
                            <TextBox Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=VadConfigurationUI.EndSilenceTimeoutMs}" Name="VadEndSilenceTimeoutTextBox"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Whisper Configuration" Name="WhiperGroupBox" FontWeight="Bold" Grid.Row="2" Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Model Type :" FontWeight="Bold"/>
                            <GroupBox Grid.Row="0" Grid.Column="1" Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <RadioButton Grid.Column="0" Content="Generic" GroupName="WhisperModelGroup" Name="WhisperModelGeneric" Checked="WhisperModelChecked"/>
                                    <RadioButton Grid.Column="1" Content="Specific" GroupName="WhisperModelGroup" Name="WhisperModelSpecific" Checked="WhisperModelChecked"/>
                                </Grid>
                            </GroupBox>
                            <Label Grid.Row="1" Grid.Column="0" Content="Language :" FontWeight="Bold"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Path=WhisperLanguageList}" SelectionChanged="WhisperLanguageSelected" Name="LanguageComboBox" />
                            <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Margin="5" Name="WhipserGenericModelConfiguration">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="1" Grid.Column="0" Content="Model :" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Path=WhisperModelsList}" SelectionChanged="WhisperModelSelected" Name="WhisperModelComboBox"/>
                                    <Label Grid.Row="2" Grid.Column="0" Content="Quantization :" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Path=WhisperQuantizationList}" SelectionChanged="WhisperQuantitzationSelected" Name="WhisperQuantizationComboBox"/>
                                    <Label Grid.Row="3" Grid.Column="0" Content="Model Directory :" FontWeight="Bold"/>
                                    <GroupBox Grid.Row="3" Grid.Column="1" Margin="-5,-5,-5,-5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=WhisperConfigurationUI.ModelDirectory}" Name="WhisperModelDirectoryTextBox"/>
                                            <Button Grid.Column="1" Content="Browse" Name="WhisperModelDirectoryButton" Click="WhisperModelDirectoryButtonClick"/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Margin="5" Name="WhipserSpecificModelConfiguration">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="3" Grid.Column="0" Content="Specifc Model Directory :" FontWeight="Bold"/>
                                    <GroupBox Grid.Row="3" Grid.Column="1" Margin="-5,-5,-5,-5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=WhisperConfigurationUI.SpecificModelPath}" Name="WhisperModelSpecficPathTextBox"/>
                                            <Button Grid.Column="1" Content="Browse" Name="WhisperModelSpecificPathButton" Click="WhisperModelSpecificPathButtonClick"/>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </GroupBox>
                            <Label Grid.Row="3" Grid.Column="0" Content="Whipser Librairy :" FontWeight="Bold"/>
                            <GroupBox Grid.Row="3" Grid.Column="1" Margin="-5,-5,-5,-5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" TextWrapping="Wrap" Text="{Binding Path=WhisperConfigurationUI.LibrairyPath}" Name="WhisperLibrairyPathTextBox"/>
                                    <Button Grid.Column="1" Content="Browse" Name="WhisperLibrairyPathButton" Click="WhisperLibrairyPathButtonClick"/>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Local Recording">
                <Grid Background="#FFE5E5E5" Name="LocalRecordingGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Grid.Row="0" Content="Activate" Name="LocalRecordingCheckbox" IsChecked="{Binding Path=IsLocalRecording}" Click="CkbActivateLocalRecording" Margin="0,10,0,10"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Session Name :" FontWeight="Bold"/>
                    <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=LocalSessionName}" Name="LocalRecordingSessionNameTextBox"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Storing :" FontWeight="Bold"/>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <RadioButton Content="Audio Only" GroupName="LocalStoringModeGroup" Name="LocalStoringModeAudio" Checked="LocalStoringModeChecked"/>
                        <RadioButton Content="VAD and STT" GroupName="LocalStoringModeGroup" Name="LocalStoringModeVADSTT" Checked="LocalStoringModeChecked"/>
                        <RadioButton Content="All" GroupName="LocalStoringModeGroup" Name="LocalStoringModeAll" Checked="LocalStoringModeChecked"/>
                    </StackPanel>
                    <Label Grid.Row="3" Grid.Column="0" Content="Dataset Directory :" FontWeight="Bold"/>
                    <GroupBox Grid.Row="3" Grid.Column="1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"  TextWrapping="Wrap" Text="{Binding Path=LocalDatasetPath}" Name="LocalRecordingDatasetDirectoryTextBox"/>
                            <Button Grid.Column="1" Content="Browse" Name="LocalRecordingDatasetDirectoryButton" Click="LocalRecordingDatasetDirectoryButtonClick"/>
                        </Grid>
                    </GroupBox>
                    <Label Grid.Row="4" Grid.Column="0" Content="Dataset Name :" FontWeight="Bold"/>
                    <GroupBox Grid.Row="4" Grid.Column="1" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"  TextWrapping="Wrap" Text="{Binding Path=LocalDatasetName}" Name="LocalRecordingDatasetNameTextBox"/>
                            <Button Grid.Column="1" Content="Browse" Name="LocalRecordingDatasetNameButton" Click="LocalRecordingDatasetNameButtonClick"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <TextBox x:Name="Logs"  TextWrapping="Wrap" IsReadOnlyCaretVisible="True" AutomationProperties.IsOffscreenBehavior="FromClip" Text="{Binding Path=Log}" TextChanged="Log_TextChanged" ScrollViewer.VerticalScrollBarVisibility="Auto" ForceCursor="True"/>
            </TabItem>
        </TabControl>
    </UserControl>
</Window>
